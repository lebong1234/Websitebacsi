@model IEnumerable<backend.Models.Entities.Packages>
@{
    ViewData["Title"] = "Danh sách Gói khám";
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Thêm mới</a>
    </div>

<table class="table table-striped table-hover responsive-table">
                <thead>
                    <tr>
            <th>Tên gói</th>
            <th>Mô tả</th>
            <th>Giá</th>
            <th>Thời lượng</th>
            <th>Chuyên khoa</th>
            <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PackageName</td>
                <td class="text-truncate" style="max-width: 350px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                    @item.Description
                </td>
                            <td>@item.Price.ToString("C")</td>
                <td>@item.DurationMinutes phút</td>
                            <td>@item.Specialty?.SpecialtyName</td>
                            <td>
                    <a asp-action="Details" asp-route-id="@item.IdPackage" class="btn btn-primary">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.IdPackage" class="btn btn-info">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.IdPackage" class="btn btn-secondary">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>