@model IEnumerable<backend.ViewModels.PatientViewModel>
@{
    ViewData["Title"] = "Danh sách Bệnh nhân";
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Thêm mới</a>
</div>

<table class="table table-striped table-hover responsive-table">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Giới tính</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Gender</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>